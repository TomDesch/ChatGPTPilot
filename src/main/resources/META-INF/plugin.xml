<idea-plugin>
  <id>org.stealingdapenta.chatgptplugin</id>
  <name>ChatGPT Assistant</name>
  <vendor email="tomdescheemaeker@hotmail.com" url="https://yourdomain.com">Tom Descheemaeker</vendor>

  <description><![CDATA[
        Right-click code and refactor it using GPT-4.<br/>
        Great for Vue, Spring Boot, REST, UI tweaks, etc.
    ]]></description>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- You can register application/project listeners here if needed -->
  </extensions>

  <actions>
    <action id="ChatGPT.SendToGPT" class="org.stealingdapenta.actions.SendToChatGPTAction"
      text="Send to ChatGPT" description="Send selected code to ChatGPT for suggestions">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>
